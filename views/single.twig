{% extends "page.twig" %}

    {% block meta %}
        By <a href="{{post.author.path}}"> {{ post.author.name }} </a>
                    {{ post.post_date|date}}
    {% endblock %}

    {% block comment %}
    		
    <!-- comments -->

        {% if post.comments %}
            <h3> comments </h3>
            {% for cmt in post.comments %}
                {% include "partials/comment.twig" with {comment:cmt} %}
            {% endfor %}
        {% endif %}

    {% endblock %}